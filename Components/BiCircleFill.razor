<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" class="@Class" width="@Size" height="@Size"
     fill="@Color" @attributes="AdditionalAttributes">
    <circle cx="8" cy="8" r="8"/>
</svg>

@code {
    [Parameter]
    public string Class { get; set; } = "bi bi-circle-fill";

    [Parameter]
    public string Color { get; set; } = "currentColor";

    [Parameter]
    public string Size { get; set; } = "1em";

    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object>? AdditionalAttributes { get; set; }
}